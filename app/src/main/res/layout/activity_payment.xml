<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#131313"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Trip Summary Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/trip_summary_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trip Summary"
            android:textColor="#d9d9d9"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="LKR 2000"
            android:textColor="#d9d9d9"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Payment Method Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Method"
        android:textColor="#d9d9d9"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/payment_method_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Credit/Debit Card Option -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_credit_card"
                android:contentDescription="Credit Card Icon"
                android:layout_marginEnd="12dp" />

            <RadioButton
                android:id="@+id/payment_credit_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credit/Debit Card"
                android:textColor="#d9d9d9"
                android:textSize="16sp"
                android:button="@null"
                android:drawablePadding="12dp" />
        </LinearLayout>

        <!-- Mobile Wallet Option -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp"
                android:background="#090909"
                android:backgroundTint="#000000"
                android:contentDescription="Mobile Wallet Icon"
                android:src="@drawable/ic_mobile_wallet" />

            <RadioButton
                android:id="@+id/payment_mobile_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Wallet"
                android:textColor="#d9d9d9"
                android:textSize="16sp"
                android:button="@null"
                android:drawablePadding="12dp" />
        </LinearLayout>

        <!-- Cash on Delivery Option -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_cash"
                android:contentDescription="Cash Icon"
                android:layout_marginEnd="12dp" />

            <RadioButton
                android:id="@+id/payment_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cash on Delivery"
                android:textColor="#d9d9d9"
                android:textSize="16sp"
                android:button="@null"
                android:drawablePadding="12dp" />
        </LinearLayout>
    </RadioGroup>

    <!-- Confirm Payment Button -->
    <Button
        android:id="@+id/confirm_payment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#c7de99"
        android:text="Confirm Payment"
        android:textColor="#131313"
        android:padding="16dp"
        android:textSize="18sp" />
</LinearLayout>