            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutmini3"
                android:layout_width="361dp"
                android:layout_height="174dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txtDriverName"
                    android:layout_width="202dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="134dp"
                    android:layout_marginBottom="19dp"
                    android:fontFamily="@font/akaya_telivigala"
                    android:text="Dean Winchester"
                    android:textColor="#D9D9D9"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/txtBusNo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/busId"
                    android:layout_width="202dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="7dp"
                    android:layout_marginBottom="17dp"
                    android:fontFamily="@font/akaya_telivigala"
                    android:text="WD - 1234"
                    android:textColor="#D9D9D9"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/routeId"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txtBusNo"
                    app:layout_constraintTop_toBottomOf="@+id/txtDriverName" />

                <TextView
                    android:id="@+id/routeId"
                    android:layout_width="202dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="7dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/akaya_telivigala"
                    android:text="E03"
                    android:textColor="#D9D9D9"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txtRoutrNo"
                    app:layout_constraintTop_toBottomOf="@+id/busId" />

                <TextView
                    android:id="@+id/txtBusNo"
                    android:layout_width="102dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="18dp"
                    android:fontFamily="@font/akaya_telivigala"
                    android:text="Bus No."
                    android:textColor="#D9D9D9"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/txtRoutrNo"
                    app:layout_constraintEnd_toStartOf="@+id/busId"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtDriverName" />

                <TextView
                    android:id="@+id/txtRoutrNo"
                    android:layout_width="102dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="26dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/akaya_telivigala"
                    android:text="Route No."
                    android:textColor="#D9D9D9"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/routeId"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtBusNo" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutmini4"
                android:layout_width="361dp"
                android:layout_height="174dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/border"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutmini3">

                <TextView
                    android:id="@+id/txtDriverName1"
                    android:layout_width="202dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="134dp"
                    android:layout_marginBottom="19dp"
                    android:fontFamily="@font/akaya_telivigala"
                    android:text="Dean Winchester"
                    android:textColor="#D9D9D9"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/txtBusNo1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/busId1"
                    android:layout_width="202dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="7dp"
                    android:layout_marginBottom="17dp"
                    android:fontFamily="@font/akaya_telivigala"
                    android:text="WD - 1234"
                    android:textColor="#D9D9D9"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/routeId1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txtBusNo1"
                    app:layout_constraintTop_toBottomOf="@+id/txtDriverName1" />

                <TextView
                    android:id="@+id/routeId1"
                    android:layout_width="202dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="7dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/akaya_telivigala"
                    android:text="E03"
                    android:textColor="#D9D9D9"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txtRoutrNo1"
                    app:layout_constraintTop_toBottomOf="@+id/busId1" />

                <TextView
                    android:id="@+id/txtBusNo1"
                    android:layout_width="102dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="18dp"
                    android:fontFamily="@font/akaya_telivigala"
                    android:text="Bus No."
                    android:textColor="#D9D9D9"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/txtRoutrNo1"
                    app:layout_constraintEnd_toStartOf="@+id/busId1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtDriverName1" />

                <TextView
                    android:id="@+id/txtRoutrNo1"
                    android:layout_width="102dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="26dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/akaya_telivigala"
                    android:text="Route No."
                    android:textColor="#D9D9D9"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/routeId1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtBusNo1" />

            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Include the bottom navigation bar -->

    <include
        android:id="@+id/includeNavbar"
        layout="@layout/driver_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>